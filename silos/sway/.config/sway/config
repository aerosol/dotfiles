font pango:JetBrains Mono Regular 11

include /etc/sway/config.d/*
include "`hostnamectl hostname`/*"

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu tofi-run | xargs swaymsg exec --
set $screenshot_area grimblast --notify copy area
set $clipboard cliphist list | tofi | cliphist decode | wl-copy
set $emoji BEMOJI_PICKER_CMD=tofi bemoji

exec dunst
exec firefox
exec alacritty
exec sworkstyle &> /tmp/sworkstyle.log
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec_always swaybg -c '#3B6EA5'

exec swayidle -w \\
         timeout 300 'gtklock -d' \\
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \\
         before-sleep 'gtklock -d'


floating_modifier $mod normal
bindsym $mod+period exec $emoji
bindsym Ctrl+Shift+f move window to output left, focus output left
bindsym Ctrl+Shift+v exec $clipboard
bindsym $mod+Escape exec 'wlrctl window focus Alacritty || $term'
bindsym $mod+w kill
bindsym $mod+space exec $menu
bindsym $mod+Alt+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym XF86MonBrightnessUp exec brightnessctl s 10+
bindsym XF86MonBrightnessDown exec brightnessctl s 10-
bindsym XF86AudioRaiseVolume exec volume up
bindsym XF86AudioLowerVolume exec volume down
bindsym XF86AudioMute exec volume mute

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
# Move focused container to workspace
bindsym $mod+Alt+1 move container to workspace number 1
bindsym $mod+Alt+2 move container to workspace number 2
bindsym $mod+Alt+3 move container to workspace number 3
bindsym $mod+Alt+4 move container to workspace number 4
bindsym $mod+Alt+5 move container to workspace number 5
bindsym $mod+Alt+6 move container to workspace number 6

bindsym $mod+o splith
bindsym $mod+b splitv

bindsym $mod+e layout toggle splith tabbed stacking splitv
bindsym $mod+t layout tabbed
bindsym $mod+g layout toggle split
bindsym $mod+p sticky toggle

bindsym $mod+f fullscreen toggle
bindsym F11 fullscreen toggle
bindsym $mod+Shift+4 exec $screenshot_area
bindsym Ctrl+Shift+$mod+Escape exec $screenshot_area

bindsym $mod+x floating toggle

bindsym $mod+a focus parent

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "quickmode" {
    bindsym r reload

    bindsym $left move left, mode "default"
    bindsym $down move down, mode "default"
    bindsym $up move up, mode "default"
    bindsym $right move right, mode "default"
 
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "quickmode"

bar {
    position bottom
    status_command i3blocks
    status_padding 4

    colors {
        statusline #000000
        background #C0C0C0
        inactive_workspace #000000 #C0C0C0 #000000
    }
}
