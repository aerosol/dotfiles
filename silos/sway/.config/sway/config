include /etc/sway/config.d/*
include "`hostnamectl hostname`/*"

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot
set $menu tofi-run | xargs swaymsg exec --
set $screenshot_area wl-screenshot
set $screencast_area wl-screencast
set $screencast_area_morda wl-screencast-morda
set $hyper Ctrl+Shift+$mod+Alt
set $meh Ctrl+Shift+Alt
set $wallpapers_path $HOME/wallpapers

output "*" bg $(find $wallpapers_path -type f | shuf -n 1) fill

title_align center
default_border normal 2

client.focused #1A7A7D #000111 #36F8FF #000000 #1A7A7D
client.unfocused #333333 #000000 #555555 #000000 #333333
client.focused_inactive #000000 #000000 #dddddd #aaaaaa

set $clipboard cliphist list | tofi | cliphist decode | wl-copy
set $emoji BEMOJI_PICKER_CMD=tofi bemoji

for_window [app_id="obsidian"] floating enable, border none, move scratchpad
# for_window [app_id="Signal"] move workspace 5
for_window [class="Spotify"] move workspace 5
for_window [class="zoom"] floating enable
for_window [class="GStreamer"] floating enable
for_window [app_id="mpv"] floating enable

exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=$XDG_CURRENT_DESKTOP

bindsym $mod+Tab workspace back_and_forth
bindsym Ctrl+period exec dunstctl close-all
bindsym $mod+m exec dunstctl set-paused toggle
bindsym $mod+t exec tofi-brotab

exec dunst
exec firefox
exec $term
exec sworkstyle &> /tmp/sworkstyle.log
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

focus_on_window_activation focus
focus_follows_mouse no

gaps inner 20

floating_modifier $mod normal
bindsym $mod+d exec $file_manager
bindsym $mod+Return exec swap-large
bindsym $mod+period exec $emoji
bindsym $meh+f move window to output left, focus output left
bindsym $meh+v exec $clipboard
bindsym $mod+Alt+v exec $clipboard
bindsym $mod+Escape exec 'wlrctl window focus $term || $term'
bindsym $mod+w kill
bindsym $mod+space exec $menu
bindsym $mod+Alt+q exec sway-exit

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym XF86MonBrightnessUp exec brightnessctl s 10+
bindsym XF86MonBrightnessDown exec brightnessctl s 10-
bindsym XF86AudioRaiseVolume exec volume up
bindsym XF86AudioLowerVolume exec volume down
bindsym XF86AudioMute exec volume mute

bindsym $mod+1 workspace number 1; exec dunstify "Desktop 1" -r 799 -t 500
bindsym $mod+2 workspace number 2; exec dunstify "Desktop 2" -r 799 -t 500
bindsym $mod+3 workspace number 3; exec dunstify "Desktop 3" -r 799 -t 500
bindsym $mod+4 workspace number 4; exec dunstify "Desktop 4" -r 799 -t 500
bindsym $mod+5 workspace number 5; exec dunstify "Desktop 5" -r 799 -t 500
bindsym $mod+6 workspace number 6; exec dunstify "Desktop 6" -r 799 -t 500
# Move focused container to workspace
bindsym $mod+Alt+1 move container to workspace number 1; workspace number 1; exec dunstify "Desktop 1" -r 799 -t 500
bindsym $mod+Alt+2 move container to workspace number 2; workspace number 2; exec dunstify "Desktop 2" -r 799 -t 500
bindsym $mod+Alt+3 move container to workspace number 3; workspace number 3; exec dunstify "Desktop 3" -r 799 -t 500
bindsym $mod+Alt+4 move container to workspace number 4; workspace number 4; exec dunstify "Desktop 4" -r 799 -t 500
bindsym $mod+Alt+5 move container to workspace number 5; workspace number 5; exec dunstify "Desktop 5" -r 799 -t 500
bindsym $mod+Alt+6 move container to workspace number 6; workspace number 6; exec dunstify "Desktop 6" -r 799 -t 500

bindsym $mod+o splith
bindsym $mod+b splitv

bindsym $mod+e layout toggle splith tabbed stacking splitv
# bindsym $mod+t layout tabbed
bindsym $mod+g layout toggle split
bindsym $mod+p sticky toggle

bindsym $mod+f fullscreen toggle
bindsym F11 fullscreen toggle
bindsym $mod+Shift+4 exec $screenshot_area
bindsym $hyper+Escape exec $screenshot_area
bindsym $mod+Shift+0 exec $screencast_area
bindsym $mod+Shift+1 exec $screencast_area_morda
bindsym $hyper+1 exec $screencast_area

bindsym $mod+x floating toggle

bindsym $mod+a focus parent

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "quickmode" {
    bindsym r reload
    bindsym o exec "obsidian --ozone-platform=wayland --enable-features=UseOzonePlatform", mode "default"


    bindsym $left move left, mode "default"
    bindsym $down move down, mode "default"
    bindsym $up move up, mode "default"
    bindsym $right move right, mode "default"

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "quickmode"

bar {
    position bottom
    status_padding 18
    mode hide
    workspace_min_width 180
    binding_mode_indicator no

    colors {
        statusline #000000
        background #ffffff00
        inactive_workspace #000000 #000000 #1A7A7D
        active_workspace #000000 #000000 #ffffff
        focused_workspace #000000 #1A7A7D #36F8FF
    }
}

bar {
    position top
        status_command status
        status_edge_padding 0
        status_padding 0
        mode overlay
        workspace_min_width 180
        binding_mode_indicator yes
        workspace_buttons no

        colors {
            statusline #000000
            background #ffffff00
        }
}
