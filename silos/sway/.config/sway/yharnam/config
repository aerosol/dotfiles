font pango:JetBrainsMono NF 12
set $file_manager dolphin

output DP-1 mode 3840x2160@60Hz pos 2160 0
output HDMI-A-1 mode 3840x2160@59Hz pos 0 0
output HDMI-A-1 transform 90

seat seat0 xcursor_theme Hackneyed 42
seat * hide_cursor when-typing enable

input * {
    xkb_layout pl
}

workspace 1 output DP-1
workspace 2 output DP-1
workspace 3 output DP-1
workspace 4 output DP-1
workspace 5 output DP-1

workspace 6 output HDMI-A-1


