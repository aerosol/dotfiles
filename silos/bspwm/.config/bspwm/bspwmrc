#!/usr/bin/env bash
xsetroot -cursor_name left_ptr

autostart() {
  pgrep -u "$USER" -f "$1" || $1 &
}

autostart-kill() {
  pkill -u "$USER" "$1"; $2 &
}

if [ "$HOSTNAME" = yharnam ]; then
  xrandr --output HDMI-A-0 --rotate right --mode 3840x2160 --left-of DisplayPort-0 --rate 60
fi

if [ "$HOSTNAME" = carb ]; then
  bspc monitor -d I II III IV V VI
fi

autostart "screensaver.sh"
autostart "picom"
autostart "flameshot"
autostart-kill "bspi_listen" "bspi_listen --config ~/.config/bspwm/bspi.ini"
# autostart-kill "wallpaper" "wallpaper"
autostart-kill "dunst" "dunst"
autostart "greenclip daemon"
if [ "$HOSTNAME" = yharnam ]; then
  autostart-kill "polybar" ""
  autostart "polybar primary"
  autostart "polybar top"
fi
if [ "$HOSTNAME" = carb ]; then
  autostart-kill "polybar" "polybar sole"
fi
autostart-kill "sxhkd" "sxhkd"
autostart "udiskie -t"
dunstify "bspwm" "Hello, $USER" -i computer-symbolic

setxkbmap -layout "pl(intl)"

if [ "$HOSTNAME" = yharnam ]; then
  bspc monitor DisplayPort-0 -d I II III IV V
  bspc monitor HDMI-A-0 -d VI
  feh --bg-fill ~/Pictures/wall-right.jpg --bg-fill ~/Pictures/wall-left.jpg
fi

bspc config border_width         8
bspc config window_gap           8
bspc config bottom_padding       65

if [ "$HOSTNAME" = yharnam ]; then
  bspc config top_padding 65
fi

bspc config normal_border_color "#444444"
bspc config focused_border_color "#ff0080"
bspc config urgent_border_color "#B58900"
bspc config presel_border_color "#26E2FF"

bspc config automatic_scheme     alternate
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config single_monocle       true

bspc config focus_follows_pointer false
bspc config pointer_follows_focus false
bspc config pointer_follows_monitor true
bspc config history_aware_focus   true
bspc config focus_by_distance     true

bspc config split_ratio          0.43

bspc rule -a Zathura state=tiled
bspc rule -a FloatThis state=floating
bspc rule -a mpv state=floating center=true
bspc rule -a feh state=floating center=true
bspc rule -a photoqt state=floating center=true
