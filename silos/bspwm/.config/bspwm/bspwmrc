#!/usr/bin/env bash
xsetroot -cursor_name left_ptr

autostart() {
  pgrep -u "$USER" -f "$1" || $1 &
}

autostart-kill() {
  pkill -u "$USER" "$1"; $1 &
}

xrandr --output HDMI-A-0 --rotate right --mode 3840x2160 --left-of DisplayPort-0 --rate 60

autostart "bspi_listen --config /home/hq1/.config/bspwm/bspi.ini"
autostart "emote"
autostart "dunst"
autostart "flameshot"
autostart "greenclip daemon"
autostart "picom"
autostart "polybar primary"
autostart "polybar top"
autostart "polybar secondary"
#autostart "screensaver.sh"
autostart "sxhkd"
#autostart "trackpoint"
autostart "udiskie -t"

bspc monitor DisplayPort-0 -d I II III IV V
bspc monitor HDMI-A-0 -d VI VII VIII IX X

bspc config border_width         8
bspc config window_gap           16
bspc config bottom_padding       45
bspc config top_padding          45

bspc config normal_border_color "#ffffff"
bspc config focused_border_color "#1F8999"
bspc config urgent_border_color "#B58900"
bspc config presel_border_color "#26E2FF"
#
bspc config automatic_scheme     alternate
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config single_monocle       true

bspc config focus_follows_pointer true
bspc config pointer_follows_focus true
bspc config history_aware_focus   true
bspc config focus_by_distance     true

bspc config split_ratio          0.43

bspc rule -a Zathura state=tiled
bspc rule -a FloatThis state=floating
bspc rule -a mpv state=floating center=true
bspc rule -a feh state=floating center=true
bspc rule -a photoqt state=floating center=true

bspc rule -a kitty state=floating rectangle=2024x1768+0+0 center=true
