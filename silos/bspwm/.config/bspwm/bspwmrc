#!/usr/bin/env bash

feh --bg-fill /home/hq1/.wallpaper.jpg &

autostart_no_notify() {
  pgrep -u "$USER" -f "$1" || $1 &
}

autostart() {
  pgrep -u "$USER" -f "$1" || (notify-send "Autostart" "$1" && $1)&
}

autostart_no_notify "dunst"
autostart "screensaver.sh"
autostart "sxhkd"
autostart "redshift-gtk"
autostart "greenclip daemon"
autostart "flameshot"
autostart "polybar example"
autostart "picom --config /home/hq1/.config/picom.conf"

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         8
bspc config window_gap          12

bspc config normal_border_color "#484848"
bspc config focused_border_color "#1F8999"
bspc config urgent_border_color "#B58900"
bspc config presel_border_color "#26E2FF"

bspc config split_ratio          0.60
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bscp config single_monocle       true

bspc config focus_follows_pointer true
bspc config history_aware_focus true
bspc config focus_by_distance true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
#bspc rule -a mplayer2 state=floating
#bspc rule -a Kupfer.py focus=on

