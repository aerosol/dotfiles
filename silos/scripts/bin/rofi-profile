#!/usr/bin/env bash
 
nprofile=$(powerprofilesctl get)
 
selected=$(echo -e "performance\nbalanced\npower-saver" | rofi -i -dmenu -p "$nprofile")
case $selected in
  *performance) powerprofilesctl set performance;;
  *balanced) powerprofilesctl set balanced;;
  *power*) powerprofilesctl set power-saver;;
esac
