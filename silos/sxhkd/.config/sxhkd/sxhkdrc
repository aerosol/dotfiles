XF86AudioMute
  volume mute

XF86Audio{Raise,Lower}Volume
  volume {up,down}

XF86MonBrightness{Up,Down}
  brightnessctl s 10{+,-}

alt + shift + ctrl + r
  bspc wm -r

super + period
  rofi -modi emoji -show emoji -theme-str 'listview\{layout: vertical;\}'

super + equal
  rofi -show calc -modi calc -no-show-match -no-sort -calc-command "echo '{result}' | xsel --clipboard --input"

super + shift + v
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

ctrl + shift + alt + v
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

ctrl + shift + alt + f
  bspc node -m next

super + space
  rofi -show run

super + slash
  rofi -show window

super + d
  dolphin

super + shift + 5
  flameshot gui

alt + shift + ctrl + super + Escape
  flameshot gui

super + BackSpace
  xset s activate

super + Return
  bspc node -s biggest.local --follow

super + Escape
  actterm

F11
  if [ -z "$(bspc query -N -n focused.fullscreen)" ]; then \
      bspc node focused -t fullscreen; \
  else \
      bspc node focused -t tiled; \
  fi

super + alt + q
  close_all.sh

super + w
  bspc node -c

super + q
  bspc node -c

super + shift + t
  colortemp

super + e 
	bspc node -g sticky

super + {x,s,f}
  bspc node -t {tiled,floating,fullscreen}

super + g
  bspc config window_gap {8, 16, 32, 64, 128, 256}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

super + Tab
  bspc desktop -f last

super + {_,alt + }{1-9,0}
  bspc {desktop -f,node -d} focused:'^{1-9,0}' --follow

control + shift + alt {1-9,0}
  bspc node -d focused:'^{1-9,0}' --follow

## expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

## contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
  bspc node -v {-60 0,0 60,0 -60,60 0}
