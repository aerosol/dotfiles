XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightness{Up,Down}
	light -s sysfs/backlight/intel_backlight -{A,U} 4

XF86Audio{Raise,Lower}Volume
	pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ {+,-}4%

super + d
	dolphin

super + shift + 5
	flameshot gui

super + BackSpace
	xset s activate

super + shift + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + Return
	bspc node -s biggest.local

super + space
	rofi -show run

super + Escape
	actterm

F11
	~/.config/sxhkd/switch

super + alt + q
	close_all.sh

super + shift + r
	pkill -USR1 -x sxhkd && sleep 1s && sxhkd &

super + w
	bspc node -c

super + q
	bspc node -k

super + n
	kitty --class FloatThis -e nnn

super + shift + t
	colortemp

super + {x,s,f}
	bspc node -t {tiled,floating,fullscreen}

super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# useful when golden ratio comes in my way
XF86Favorites
    bspc node -g private; \
    notify-send "Private node toggle"

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }grave
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

super + Tab
	bspc desktop -f last

super + slash
	rofi -show window

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + b
	bspc node @parent -B

## expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

## contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-60 0,0 60,0 -60,60 0}
