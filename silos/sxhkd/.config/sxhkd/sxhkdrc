XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightness{Up,Down}
    brightnessctl s 10{+,-}

XF86Audio{Raise,Lower}Volume
	pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ {+,-}4%

super + period
  rofi -modi emoji -show emoji

super + d
	dolphin

super + shift + 5
    import png:- | xclip -selection c -t image/png

~button3
  bspc query -D -d 'focused.!occupied' && \{ \
      jgmenu_run; \
  \}

alt + shift + ctrl + super + Escape
    import png:- | xclip -selection c -t image/png

super + BackSpace
	xset s activate

super + shift + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + Return
	bspc node -s biggest.local

super + space
	rofi -show run

super + Escape
	~/bin/actterm

F11
	bspc node -t {tiled,floating,fullscreen}

super + alt + q
	~/bin/close_all.sh

super + shift + r
	pkill -USR1 -x sxhkd && sleep 1s && sxhkd &

super + w
	bspc node -c

super + q
	bspc node -c

super + n
    id=$(cat /tmp/scratchid);\
    bspc node $id --flag hidden;bspc node -f $id

super + shift + t
	colortemp

super + {x,s,f}
	bspc node -t {tiled,floating,fullscreen}

# useful when golden ratio comes in my way
XF86Favorites
    bspc node -g private; \
    notify-send "Private node toggle"

XF86Display
    bspc node -g sticky; \
    notify-send "Sticky node toggle"

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }grave
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

super + Tab
	bspc desktop -f last

super + slash
	rofi -show window

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,0}'

control + shift + alt + f
	bspc node -m next

super + b
	bspc node @parent -B

## expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

## contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-60 0,0 60,0 -60,60 0}

